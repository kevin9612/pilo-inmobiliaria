<!DOCTYPE html>
<html>

  <head>
    <link data-require="bootstrap@*" data-semver="4.0.0-alpha.2" rel="stylesheet" href="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/css/bootstrap.css" />
    <script data-require="bootstrap@*" data-semver="4.0.0-alpha.2" src="https://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js"></script>
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/home.css" />
    <script src="script.js"></script>
  </head>

  <body>
     <div id="fullscreen_bg" class="fullscreen_bg">
      
    <form class="form-horizontal" action='{{ url('doregistro') }}' method="POST">
  <div class="container">
      
    <div class="row">
		<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Registrar Datos</h3>
			 	</div>
			  	<div class="panel-body">
			    
                    <fieldset>
                 <input type="hidden" name="id" value="{{ array.id }}">   	
                 
			    	  	<div class="form-group">
			    		    <input class="form-control"  name="direccion" value="{{ array.direccion }}"  placeholder="Direccion"  type="text">
			    		</div>
			    	<div class="form-group">
			    		    <input class="form-control" placeholder="Descripcion" name="descripcion" value="{{ array.descripcion }}" type="text">
			    		</div>
			    		<div class="form-group">
			    		    <input class="form-control" placeholder="Precio" name="precio" value="{{ array.precio }}" type="text">
			    		</div>
			    			<div class="form-group">
			    		    <input class="form-control" placeholder="Nombre" name="tipo" value="{{ array.nombre }}" type="text">
			    		</div>
			    			<div class="form-group">
			    		    <input class="form-control" placeholder="Latitud" name="latitud" value="{{ array.latitud }}" type="text">
			    		</div>
			    			<div class="form-group">
			    		    <input class="form-control" placeholder="Longitud" name="longitud" value="{{ array.longitud }}" type="text">
			    		</div>
			    		<input class="btn btn-lg btn-success btn-block" type="submit" value="Registrar">
			    	</fieldset>
			      	</form>
			    </div>
			      
			</div>
		</div>
	</div>
</div>
</div>
  </body>

</html>
